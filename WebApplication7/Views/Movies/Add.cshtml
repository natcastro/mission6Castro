@model WebApplication7.Models.Movie

<h1>Add a Movie</h1>

<form asp-action="Add" method="post">

    <label asp-for="Category"></label>
    <input asp-for="Category" />
    <span asp-validation-for="Category"></span>

    <label asp-for="Title"></label>
    <input asp-for="Title" />
    <span asp-validation-for="Title"></span>

    <label asp-for="Year"></label>
    <input asp-for="Year" />
    <span asp-validation-for="Year"></span>

    <label asp-for="Director"></label>
    <input asp-for="Director" />
    <span asp-validation-for="Director"></span>

    <label asp-for="Rating"></label>
    <select asp-for="Rating">
        <option value="">Select Rating</option>
        <option>G</option>
        <option>PG</option>
        <option>PG-13</option>
        <option>R</option>
    </select>

    <label asp-for="Edited"></label>
    <select asp-for="Edited">
        <option value="false">No</option>
        <option value="true">Yes</option>
    </select>

    <label asp-for="LentTo"></label>
    <input asp-for="LentTo" />

    <label asp-for="Notes"></label>
    <input asp-for="Notes" />
    <span asp-validation-for="Notes"></span>

    <button type="submit">Submit</button>
</form>