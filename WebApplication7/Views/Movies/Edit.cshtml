@model WebApplication7.Models.Movie
@{
    var categories = ViewBag.Categories as List<WebApplication7.Models.Category>;
}

<h1>Edit Movie</h1>

<form asp-action="Edit" method="post" class="mt-3">
    <input type="hidden" asp-for="MovieId"/>

    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label">Category</label>
        <select asp-for="CategoryId" class="form-select">
            @foreach (var c in categories)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control"/>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Year" class="form-label"></label>
        <input asp-for="Year" class="form-control"/>
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Edited" class="form-label"></label>
        <select asp-for="Edited" class="form-select">
            <option value="">Select...</option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <span asp-validation-for="Edited" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CopiedToPlex" class="form-label"></label>
        <select asp-for="CopiedToPlex" class="form-select">
            <option value="">Select...</option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <span asp-validation-for="CopiedToPlex" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Director" class="form-label"></label>
        <input asp-for="Director" class="form-control"/>
    </div>

    <div class="mb-3">
        <label asp-for="Rating" class="form-label"></label>
        <input asp-for="Rating" class="form-control"/>
    </div>

    <div class="mb-3">
        <label asp-for="LentTo" class="form-label"></label>
        <input asp-for="LentTo" class="form-control"/>
    </div>

    <div class="mb-3">
        <label asp-for="Notes" class="form-label"></label>
        <input asp-for="Notes" class="form-control"/>
    </div>

    <button class="btn btn-dark" type="submit">Save</button>
    <a class="btn btn-outline-secondary" asp-action="listMovie">Cancel</a>
</form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }