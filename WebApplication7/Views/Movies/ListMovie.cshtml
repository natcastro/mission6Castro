@model List<WebApplication7.Models.Movie>

<h1 class="mb-3">Movie Collection</h1>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
    <tr>
        <th>Category</th>
        <th>Title</th>
        <th>Year</th>
        <th>Director</th>
        <th>Rating</th>
        <th>Edited</th>
        <th>Copied To Plex</th>
        <th>Lent To</th>
        <th>Notes</th>
        <th></th>
    </tr>
    </thead>

    <tbody>
    @foreach (var m in Model)
    {
        <tr>
            <td>@m.Category?.CategoryName</td>
            <td>@m.Title</td>
            <td>@m.Year</td>
            <td>@m.Director</td>
            <td>@m.Rating</td>
            <td>@(m.Edited == true ? "Yes" : "No")</td>
            <td>@(m.CopiedToPlex == true ? "Yes" : "No")</td>
            <td>@m.LentTo</td>
            <td>@m.Notes</td>
            <td class="text-end">
                <a class="btn btn-sm btn-outline-primary"
                   asp-action="Edit" asp-route-id="@m.MovieId">Edit</a>

                <a class="btn btn-sm btn-outline-danger"
                   asp-action="Delete" asp-route-id="@m.MovieId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>